<!-- ./views/show.handlebars -->
<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>

{{!-- 返回首頁、修改、刪除等動作按鈕 --}}
<div class="container">
  <div class="row">
    <div class="mx-auto px-5">
      <a class="btn btn-success px-3 mx-3" href="/">返回首頁</a>
      <a class="btn btn-info px-3 " href="/restaurants/{{restaurant._id}}/edit">修改</a>
      <form class="btn">
        <button type="button" class="btn btn-danger px-3" data-toggle="modal"
          data-target="#trigger-deleteItem-{{restaurant._id}}">刪除</button>
      </form>
    </div>
  </div>
</div>

<!-- 刪除餐廳-->
<div class="modal fade" id="trigger-deleteItem-{{restaurant._id}}" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-body">
        <p class="font-weight-light">確定要刪除【 {{restaurant.name}} 】餐廰嗎?</p>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">關閉</button>
        <form action="/restaurants/{{restaurant._id}}/delete?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-danger">刪除</button>
        </form>
      </div>

    </div>
  </div>
</div>

<!-- 顯示餐廳細節資訊 -->
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
    </div>
  </div>
</div>